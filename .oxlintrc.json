{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "pedantic": "off",
    "perf": "warn",
    "style": "off",
    "restriction": "off",
    "nursery": "off"
  },
  "rules": {
    "no-console": "off",
    "no-debugger": "warn",
    "no-alert": "error",
    "no-unused-vars": "warn",
    "no-undef": "error",
    "eqeqeq": ["error", "always"]
  },
  "plugins": ["typescript", "unicorn", "import", "promise"],
  "ignorePatterns": [
    "node_modules/",
    ".nuxt/",
    ".output/",
    "dist/",
    "coverage/",
    "supabase/",
    ".claude/skills/",
    "*.d.ts"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es2024": true
  },
  "globals": {
    "defineNuxtConfig": "readonly",
    "defineNuxtPlugin": "readonly",
    "defineNuxtRouteMiddleware": "readonly",
    "defineEventHandler": "readonly",
    "definePageMeta": "readonly",
    "defineProps": "readonly",
    "defineEmits": "readonly",
    "defineModel": "readonly",
    "useRuntimeConfig": "readonly",
    "useRoute": "readonly",
    "useRouter": "readonly",
    "useState": "readonly",
    "useFetch": "readonly",
    "useAsyncData": "readonly",
    "useLazyFetch": "readonly",
    "useLazyAsyncData": "readonly",
    "useNuxtApp": "readonly",
    "useHead": "readonly",
    "useSeoMeta": "readonly",
    "navigateTo": "readonly",
    "createError": "readonly",
    "clearError": "readonly",
    "showError": "readonly",
    "clearNuxtData": "readonly",
    "refreshNuxtData": "readonly",
    "setPageLayout": "readonly",
    "setResponseStatus": "readonly",
    "prerenderRoutes": "readonly",
    "abortNavigation": "readonly",
    "addRouteMiddleware": "readonly",
    "defineNuxtComponent": "readonly",
    "useAppConfig": "readonly",
    "updateAppConfig": "readonly",
    "useError": "readonly",
    "useRequestEvent": "readonly",
    "useRequestFetch": "readonly",
    "useRequestHeaders": "readonly",
    "useRequestURL": "readonly",
    "useCookie": "readonly",
    "refreshCookie": "readonly",
    "onNuxtReady": "readonly",
    "callOnce": "readonly",
    "setInterval": "readonly",
    "setTimeout": "readonly",
    "clearInterval": "readonly",
    "clearTimeout": "readonly",
    "console": "readonly",
    "$fetch": "readonly",
    "ref": "readonly",
    "reactive": "readonly",
    "computed": "readonly",
    "watch": "readonly",
    "watchEffect": "readonly",
    "onMounted": "readonly",
    "onUnmounted": "readonly",
    "onBeforeMount": "readonly",
    "onBeforeUnmount": "readonly",
    "nextTick": "readonly",
    "toRef": "readonly",
    "toRefs": "readonly",
    "unref": "readonly",
    "isRef": "readonly",
    "shallowRef": "readonly",
    "triggerRef": "readonly",
    "customRef": "readonly",
    "toRaw": "readonly",
    "markRaw": "readonly",
    "provide": "readonly",
    "inject": "readonly",
    "useColorMode": "readonly",
    "useToast": "readonly",
    "useSupabaseClient": "readonly",
    "useSupabaseUser": "readonly",
    "useUserSession": "readonly",
    "usePiniaColada": "readonly",
    "defineStore": "readonly",
    "storeToRefs": "readonly",
    "acceptHMRUpdate": "readonly"
  }
}
